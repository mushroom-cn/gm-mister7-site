{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ESNext",
    "allowJs": true,
    "sourceMap": true,
    "sourceRoot": "dist",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "paths": {
        "@common": ["src/common"],
        "@common/*": ["src/common/*"],
        "@plugins": ["src/plugins"],
        "@plugins/*": ["src/plugins/*"],
    }
  },
  "include": ["src", "types"],
  "exclude": [".eslintrc.js", "webpack.config.js"]
}
