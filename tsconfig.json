{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ESNext",
    "allowJs": true,
    "sourceMap": true,
    "sourceRoot": "dist",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist"
  },
  "include": ["src", "types"],
  "exclude": [".eslintrc.js", "webpack.config.js"]
}
